<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".SupportFragment">

    <!-- Support Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/baseline_support_24"
        android:contentDescription="Support Icon"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"/>

    <!-- Support Heading -->
    <TextView
        android:id="@+id/tvSupportHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need Assistance?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"/>

    <!-- Support Description -->
    <TextView
        android:id="@+id/tvSupportDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you need help, feel free to contact us via email. We are here to assist you!"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="8dp"
        android:paddingBottom="15dp"/>

    <!-- Support Email Display -->
    <TextView
        android:id="@+id/tvSupportEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“§ parkeasy@gmail.com"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingBottom="20dp"/>

    <!-- Contact Us Button -->
    <Button
        android:id="@+id/btnContactSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:background="@color/black"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>