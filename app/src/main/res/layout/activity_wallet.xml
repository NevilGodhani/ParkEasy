<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalletActivity"
    android:background="#F9F9F9"
    android:orientation="vertical">

    <include layout="@layout/appbar_mainactivity2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/includ_draweracton"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F9F9F9">
    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: â‚¹0.0"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/et_amount"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Enter Amount"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_money"
        android:text="Add Money"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_withdraw_money"
        android:backgroundTint="@color/red"
        android:text="Withdraw Money"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

                <EditText
                    android:id="@+id/et_search_date"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="Search by Date"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:drawablePadding="10dp"/>


        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>